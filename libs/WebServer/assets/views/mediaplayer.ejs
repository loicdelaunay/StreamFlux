<% include header %>
<% include navbar %>

<!-- Card -->
<div id="app-player" class="card card-cascade">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header blue-gradient">

        <!-- Title -->
        <h2 class="card-header-title mb-3">Movie player : </h2>


    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <div id="app-player" class="row">

            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Options</th>
                </tr>
                </thead>
                <tbody>

                <tr v-for="(value, key, index) in videos">
                    <th scope="row">{{key}}</th>
                    <td>{{value}}</td>
                    <td>
                        <a type="button" class="btn btn-outline-success btn-rounded waves-effect" v-bind:href="'videoplayer?video='+value">Play</a>
                        <a type="button" class="btn btn-outline-danger btn-rounded waves-effect">Delete</a>
                    </td>
                </tr>

                </tbody>
            </table>

        </div>

    </div>

</div>

<% include footer %>