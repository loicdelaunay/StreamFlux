<% include header %>
<% include navbar %>

<!-- Card -->
<div class="card card-cascade mb-5">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header blue-gradient">

        <!-- Title -->
        <h2 class="card-header-title mb-3">Your Recorders</h2>

    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">


        <div id="app-recorder">
            <!--Table-->
            <table class="table table-striped table-hover table-responsive-xl">

                <!--Table head-->
                <thead>
                <tr>
                    <th>Url</th>
                    <th>Quality</th>
                    <th>Folder</th>
                    <th>Start at</th>
                    <th>End at</th>
                    <th>State</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <!--Table head-->

                <!--Table body-->
                <tbody>

                <tr v-for="recorder in recorders">
                    <td>{{ recorder.url }}</td>
                    <td>{{ recorder.quality }}</td>
                    <td>{{ recorder.folder }}</td>
                    <td>{{ recorder.startAt }}</td>
                    <td>{{ recorder.endAt }}</td>
                    <td data-toggle="tooltip" data-placement="bottom" v-bind:title="recorder.stateMessage">{{ recorder.state }}</td>
                    <td>
                        <a class="badge badge-pill danger-color remove-recorder" v-on:click="removeRecorder(recorder.uid)"><i
                                    class="fas fa-trash-alt fa-2x"></i></a>
                    </td>
                </tr>
                </tbody>
                <!--Table body-->
            </table>
            <!--Table-->
        </div>

    </div>

</div>
<!-- Card -->

<!-- Card -->
<div class="card card-cascade">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header blue-gradient">

        <!-- Title -->
        <h2 class="card-header-title mb-3">Create a new Recorder</h2>

    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <form>
            <!-- Grid row -->
            <div class="form-row align-items-md-center">

                <div class="col-10 md-form">
                    <input id="url" type="text" class="form-control">
                    <label for="url">Stream URL</label>
                </div>

                <div class="col-2">
                    <select id="quality" class="mdb-select colorful-select dropdown-primary">
                        <option value="" disabled selected>Quality</option>
                        <option value="audio">Audio</option>
                        <option value="1">Low</option>
                        <option value="2">Medium</option>
                        <option value="3">High</option>
                        <option value="4">Highest</option>
                    </select>
                </div>

                <div class="col-4 ml-md-auto md-form">
                    <input id="folder" type="text" class="form-control" value="<%= defaultFolder %>">
                    <label for="folder">Recorder folder</label>
                </div>

                <div class="col-2 ml-md-auto md-form">
                    <input id="filename" type="text" class="form-control" value="MyVideo">
                    <label for="filename">Recorder name</label>
                </div>
                <div class="col-1 ml-md-auto ">
                    <div class="custom-control custom-checkbox">
						<input type="checkbox" class="custom-control-input" id="start-anytime" checked>
						<label class="custom-control-label" for="start-anytime">Start Anytime</label>
					</div>
                </div>
				<div class="col-1 ml-md-auto md-form">
                    <input id="start-time" type="text" class="form-control timepicker">
                    <label for="start-time">Start recordering at</label>
                </div>
                <div class="col-1 ml-md-auto md-form">
                    <input id="end-time" type="text" class="form-control timepicker">
                    <label for="end-time">End recordering at</label>
                </div>
                <div class="col-1 ml-md-auto md-form">
                    <button id="btn-post" type="button" value="ok" class="btn btn-outline-primary btn-rounded waves-effect">Add</button>
                </div>
            </div>
        </form>

    </div>

</div>
<!-- Card -->

<% include footer %>