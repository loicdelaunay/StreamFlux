<% include header %>
<% include navbar %>

<!-- Card -->
<div class="card card-cascade">

    <!-- Card image -->
    <div class="view view-cascade gradient-card-header blue-gradient">

        <!-- Title -->
        <h2 class="card-header-title mb-3">List of processes : </h2>


    </div>

    <!-- Card content -->
    <div class="card-body card-body-cascade text-center">

        <div id="app-process" class="card-group">

            <!--Card-->
            <div class="card mb-4" v-for="process in processes">

                <!--Card content-->
                <div class="card-body">

                    <!--Title-->
                    <h4 class="card-title">{{process.url}}</h4>

                    <p>Quality : {{process.quality}}</p>
                    <p>Folder : {{process.folder}}</p>
                    <p>Start At : {{process.startAt}}</p>
                    <p>End At : {{process.endAt}}</p>
                    <p>State : {{process.stateMessage}}</p>


                    <span class="badge badge-pill orange"><i class="fas fa-hdd"></i> Size : {{process.size}}</span>
                    <span class="badge badge-pill purple"><i class="fas fa-cloud-download-alt"></i> Speed : {{process.speed}}</span>
                    <span class="badge badge-pill green"><i class="fas fa-clock"></i> Recordering time : {{process.time}}</span>

                </div>
                <!--Card content-->
            </div>
            <!--Card-->

        </div>

    </div>

</div>

<% include footer %>